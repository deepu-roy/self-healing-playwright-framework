{
    "name": "self-healing-playwright-ts",
    "version": "1.0.0",
    "description": "AI-powered self-healing locators for Playwright TypeScript - automatically recovers from element identification failures using OpenAI GPT models",
    "main": "src/index.ts",
    "scripts": {
        "test": "npx playwright test",
        "test:headed": "npx playwright test --headed",
        "install-deps": "npm install && npx playwright install",
        "clear-cache": "node -e \"require('fs').rmSync('cache', {recursive: true, force: true})\"",
        "format": "prettier --write .",
        "lint": "eslint . --ext .ts,.js",
        "lint:fix": "eslint . --ext .ts,.js --fix",
        "type-check": "tsc --noEmit",
        "validate": "npm run type-check && npm run lint:check && npm run format:check",
        "pre-commit": "npm run validate && npm test"
    },
    "keywords": [
        "playwright",
        "typescript",
        "test",
        "automation",
        "self-healing",
        "ai-powered",
        "openai",
        "locators",
        "resilient-testing",
        "web-automation"
    ],
    "author": "Deepu Roy",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.32.0",
        "@playwright/test": "^1.40.0",
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^8.38.0",
        "@typescript-eslint/parser": "^8.38.0",
        "eslint": "^9.32.0",
        "eslint-plugin-playwright": "^2.2.1",
        "prettier": "^3.6.2",
        "typescript": "^5.0.0",
        "typescript-eslint": "^8.38.0"
    },
    "dependencies": {
        "openai": "^5.10.2"
    }
}
